<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="16sp">
    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="2dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="4sp"/>
            <TextView
                android:id="@+id/TodayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You Got Work Today"
                android:textSize="14sp"
                android:textColor="#9D9D9D"
                tools:ignore="HardcodedText"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/SettingButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Setting Button"
            android:src="@drawable/ic_setting"
            android:background="@drawable/bg_circle"
            tools:ignore="HardcodedText"
            android:elevation="4sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8sp"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/QuickTabs"
        app:layout_constraintTop_toBottomOf="@id/TopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="20dp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/TodayTab"
            android:layout_row="0"
            android:layout_column="0"
            app:cardBackgroundColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/main_theme">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_today_calendar"
                android:layout_gravity="top|start"
                android:clickable="false"
                app:tint="#4CAF50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_gravity="bottom|start"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/WeeklyTab"
            android:layout_row="0"
            android:layout_column="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@android:color/transparent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_weekly"
                android:layout_gravity="top|start"
                android:clickable="false"
                app:tint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_gravity="bottom|start"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/AllTab"
            android:layout_row="1"
            android:layout_column="0"
            app:cardBackgroundColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@android:color/transparent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_list"
                android:layout_gravity="top|start"
                android:clickable="false"
                app:tint="#9C27B0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_gravity="bottom|start"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/UpcomingTab"
            android:layout_row="1"
            android:layout_column="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="@android:color/transparent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_upcoming"
                android:layout_gravity="top|start"
                android:clickable="false"
                app:tint="#FF9800"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:layout_gravity="bottom|start"/>
        </com.google.android.material.card.MaterialCardView>
    </GridLayout>

    <TextView
        android:id="@+id/CurrentTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/QuickTabs"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Today"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/List"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/CurrentTab"
        android:layout_marginTop="20sp" />
    <ImageButton
        android:id="@+id/AddNewItemButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Add Item Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36sp"
        android:layout_marginEnd="8sp"
        android:src="@drawable/ic_add"
        android:background="@drawable/bg_circle"
        tools:ignore="HardcodedText"
        android:elevation="4sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>